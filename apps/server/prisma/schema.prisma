// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    @@map(name: "users")
    id String @id
    firstName String @map(name: "first_name") @default("")
    lastName String @map(name: "last_name") @default("")
    mail String @unique
    hashedPw String @map(name: "hashed_pw")
    createdAt DateTime @default(now()) @map(name: "created_at")
    updatedAt DateTime @updatedAt @default(now()) @map(name: "updated_at")
}

model Room {
    @@map(name: "rooms")
    id String @id
    name String
    createdAt DateTime @default(now()) @map(name: "created_at")
    updatedAt DateTime @updatedAt @default(now()) @map(name: "updated_at")
}
